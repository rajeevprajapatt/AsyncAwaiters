<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Problem Upload Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-5">
  <div class="card shadow p-4">

    <h2 class="text-center mb-4">Upload Problem</h2>

    <form>

      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Enter problem title" required>
      </div>

      <!-- Urgency -->
      <div class="mb-3">
        <label for="urgency" class="form-label">Urgency</label>
        <select class="form-select" id="urgency" required>
          <option selected disabled value="">Choose urgency</option>
          <option value="Low">Low</option>
          <option value="Medium">Medium</option>
          <option value="High">High</option>
        </select>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" placeholder="Enter location" required>
      </div>

      <!-- Upload Photo -->
      <div class="mb-3">
        <label for="photo" class="form-label">Upload Photo</label>
        <input class="form-control" type="file" id="photo" accept="image/*">
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control" id="description" rows="4" placeholder="Enter detailed description..." required></textarea>
      </div>

      <!-- Submit Button -->
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Submit Problem</button>
      </div>

    </form>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
